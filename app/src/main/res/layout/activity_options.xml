<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_options_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jaredkohler.ontimefitness.Options_Activity">

    <Button
        android:text="@string/button_schedule"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSchedule"
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="loadSchedule"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSelect"
        android:text="Select Schedule"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/buttonSchedule"
        android:layout_alignLeft="@+id/buttonSchedule"
        android:layout_alignStart="@+id/buttonSchedule"
        android:onClick="loadSelectSchedule"/>

    <Button
        android:text="Daily Route"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRoute"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/buttonSelect"
        android:layout_alignLeft="@+id/buttonSelect"
        android:layout_alignStart="@+id/buttonSelect"
        android:onClick="loadDailyRoute"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBody"
        android:text="Body Settings"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/buttonRoute"
        android:layout_alignLeft="@+id/buttonRoute"
        android:layout_alignStart="@+id/buttonRoute"
        android:onClick="loadBodySettings"/>

</RelativeLayout>
